{
  "name": "vue-webpack-scaffold",
  "description": "Justin's custom vue webpack scaffold.",
  "version": "1.0.0",
  "author": "jml6487@gmail.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot --config config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production npm run clean && webpack -p --hide-modules --config config/webpack.prod.js",
    "start": "node server.js",
    "heroku-prebuild": "npm install -dev && npm run build",
    "heroku-postbuild": "npm uninstall -dev"
  },
  "dependencies": {
    "express": "^4.16.2",
    "vue": "^2.5.11",
    "vue-router": "^3.0.1",
    "vuelidate": "^0.6.1",
    "vuetify": "^0.17.6",
    "vuex": "^3.0.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "buble": "^0.18.0",
    "buble-loader": "^0.5.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint-plugin-html": "^4.0.6",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^3.4.2",
    "rimraf": "^2.6.2",
    "standard": "^12.0.1",
    "vue-loader": "^13.0.5",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^5.75.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.2"
  }
}
